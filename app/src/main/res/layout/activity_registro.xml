<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <Button
        android:id="@+id/bt_salvarRegistro"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:onClick="salvarRegistro"
        android:text="Registrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_Voltar"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_Posologia"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Posologia"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    <EditText
        android:id="@+id/et_NomeCom"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Nome comercial"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_Esp" />

    <EditText
        android:id="@+id/et_Freq"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Frequência"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_NomeCom" />

    <EditText
        android:id="@+id/et_Esp"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Espécie de referência"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    <EditText
        android:id="@+id/et_concentra"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Concentração"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_Posologia" />

    <RadioGroup
        android:id="@+id/rg_Grupo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_AdicionarObs">

        <RadioGroup
            android:id="@+id/rg_g1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rb_Passaro"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="Ave pássaro" />

            <RadioButton
                android:id="@+id/rb_NPassaro"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="Ave não pássaro" />

            <RadioButton
                android:id="@+id/rb_Reptil"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="Réptil" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/rg_g2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rb_MaMetaAlto"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="Mamífero meta alto" />

            <RadioButton
                android:id="@+id/rb_MaMetaBaixo"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="Mamífero meta baixo" />

        </RadioGroup>

    </RadioGroup>

    <TextView
        android:id="@+id/tv_alvo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Animal alvo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_Freq" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_PrincipioAtivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Principio Ativo" />
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/cb_AdicionarObs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar observação"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_alvo" />

    <CheckBox
        android:id="@+id/cb_EditarObs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar observação"
        app:layout_constraintBaseline_toBaselineOf="@+id/cb_AdicionarObs"
        app:layout_constraintStart_toStartOf="@+id/guideline" />

    <EditText
        android:id="@+id/et_Obs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_AdicionarObs" />

    <Button
        android:id="@+id/bt_SalvaObs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_Obs" />

    <CheckBox
        android:id="@+id/cb_LimpaAlvo"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:text="Limpar seleção do alvo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_Grupo" />

</androidx.constraintlayout.widget.ConstraintLayout>